<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView
        android:id="@+id/scrollSettingsGeneral"
        android:layout_width="fill_parent"
        android:layout_height="411.3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Nickname"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSettingsNickName" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSettingsNickName" />
            <CheckBox
                android:text="Play sound on new message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chkSettingsPlayNewMessage" />
            <CheckBox
                android:text="Play sound on join/leave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chkSettingsJoinLeave" />
            <TextView
                android:text="XBSLink Internal Server"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSettingsIPInternalServer" />
            <TextView
                android:text="Cloud Host"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSettingsCloudServerHost" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSettingsCloudServerHost" />
            <TextView
                android:text="Port"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSettingsCloudServerPort" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSettingsCloudServerPort" />
            <Button
                android:text="Save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSettingsSave"
                android:layout_marginTop="23.3dp" />
            <Button
                android:text="Reload"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSettingsReconnect" />
            <Button
                android:text="Delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSettingsDelete" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>